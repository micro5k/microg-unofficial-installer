{
    "version": "2.0.0",
    "presentation": {
        "reveal": "always",
        "revealProblems": "onProblem"
    },
    "tasks": [
        {
            "label": "buildOta",
            "detail": "$(tools) Build the flashable OTA zip.",
            "type": "shell",
            "command": "${workspaceFolder}/build.sh",
            "windows": {
                "command": "${workspaceFolder}\\build.bat"
            },
            "options": {
                "env": {
                    "BUILD_TYPE": "full"
                }
            },
            "group": {
                "kind": "build"
            },
            "problemMatcher": []
        },
        {
            "label": "buildOtaOSS",
            "detail": "$(tools) Build the flashable OTA zip (open-source components only).",
            "type": "shell",
            "command": "${workspaceFolder}/build.sh",
            "windows": {
                "command": "${workspaceFolder}\\build.bat"
            },
            "options": {
                "env": {
                    "BUILD_TYPE": "oss"
                }
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": []
        },
        {
            "label": "test",
            "detail": "Emulate an Android recovery on your PC and run the flashable zip file inside it to see the result.",
            "type": "shell",
            "command": "${workspaceFolder}/recovery-simulator/recovery.sh",
            "args": [
                "${workspaceFolder}/output/*.zip"
            ],
            "windows": {
                "command": "${workspaceFolder}\\recovery-simulator\\recovery.bat",
                "args": [
                    "${workspaceFolder}\\output\\*.zip"
                ]
            },
            "options": {
                "env": {
                    "BB_GLOBBING": "1"
                }
            },
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "presentation": {
                "panel": "dedicated"
            },
            "problemMatcher": []
        }
    ]
}
