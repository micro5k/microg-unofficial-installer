root = true

[{cache,output,gradlew,.git,.gradle,.ash_history}]
ignore = true

[*]
charset = utf-8
end_of_line = lf

indent_style = space
indent_size = 2
trim_trailing_whitespace = true
insert_final_newline = true

max_line_length = 80
quote_type = single
curly_bracket_next_line = true

shell_variant = posix
switch_case_indent = true
space_redirects = true
function_next_line = true

[*.{yml,yaml}]
quote_type = double

[*.xml]
indent_size = 4

[*.bat]
end_of_line = crlf

[zip-content/customize.sh]
keep_padding = true

[{build.sh,recovery-simulator/recovery.sh}]
shell_variant = bash
